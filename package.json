{
  "author": "Octopus Deploy",
  "bugs": {
    "url": "https://github.com/OctopusDeploy/push-package-action/issues"
  },
  "dependencies": {
    "@actions/core": "1.11.1",
    "@octopusdeploy/api-client": "3.11.0",
    "glob": "8.1.0"
  },
  "description": "GitHub Action to Push a Package to Octopus Deploy",
  "devDependencies": {
    "@stylistic/eslint-plugin": "5.7.1",
    "@types/glob": "8.1.0",
    "@types/jest": "29.5.14",
    "@types/json-patch": "0.0.33",
    "@types/lodash": "4.17.23",
    "@types/node": "24.7.2",
    "@types/tmp": "0.2.6",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "@vercel/ncc": "0.38.4",
    "eslint": "9.39.2",
    "eslint-plugin-github": "6.0.0",
    "eslint-plugin-jest": "29.12.2",
    "eslint-plugin-prettier": "4.2.5",
    "jest": "29.7.0",
    "jest-circus": "29.7.0",
    "jest-junit": "15.0.0",
    "js-yaml": "4.1.1",
    "prettier": "2.8.8",
    "tmp": "0.2.5",
    "ts-jest": "29.4.6",
    "typescript": "5.9.3"
  },
  "homepage": "https://github.com/OctopusDeploy/push-package-action#readme",
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "setupFiles": [
      "<rootDir>/src/test-setup.ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "testRunner": "jest-circus/runner",
    "testTimeout": 10000,
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeperator": " > ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "keywords": [
    "cli",
    "deployment",
    "octopus-deploy",
    "github-actions"
  ],
  "license": "Apache-2.0",
  "main": "src/index.ts",
  "name": "push-package-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OctopusDeploy/push-package-action.git"
  },
  "scripts": {
    "all": "npm run format && npm run build && npm test",
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "prebuild": "eslint src/**/*.ts",
    "postbuild": "ncc build out/index.js -o dist",
    "test": "jest --ci --reporters=default --reporters=jest-junit",
    "test:unit": "jest --ci --reporters=default --reporters=jest-junit --testPathPattern=__tests__/unit",
    "test:integration": "jest --ci --reporters=default --reporters=jest-junit --testPathPattern=__tests__/integration"
  },
  "version": "4.0.0"
}
